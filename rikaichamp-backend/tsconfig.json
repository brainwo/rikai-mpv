{ "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "extension",
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2017",
    "module": "ESNext",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types","node_modules/web-ext-types","src/common.d.ts"]
      },
  "include": [
    "./src/*"
  ]
}
